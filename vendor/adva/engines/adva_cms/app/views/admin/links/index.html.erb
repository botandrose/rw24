
<%
	table_for @links, :class => 'links list tree' do |t|
		t.column :link, :address, :published, :author, :actions

		t.row do |r, link|
			r.add_class "level_#{link.level}"
			r.cell content_status(link) + link_to_edit(link.title, link, :class => link.state)
			r.cell link_to(link.body, link.body)
			r.cell published_at_formatted(link)
			r.cell link_to(link.author_name, admin_site_user_path(@site, link.author))
			r.cell links_to_actions([:edit, :delete], link)
		end

		t.empty :p, :class => 'empty' do
			params[:filters] ?
				t(:'adva.links.no_filtered_links') :
				t(:'adva.links.no_links', :section => @section.title) + "\n" +
				link_to_new(:'adva.links.links.create_now', [@section, :link])
		end
	end
%>

<% content_for :sidebar do -%>
 	<div class="tabs">
		<ul>
			<li class="active"><a href="#filters" onclick="return false;"><%= t(:'adva.titles.filter') %></a></li>
		</ul>
		<div class="tab active" id="tab_filters">
			<% filter_for(Article, :categories => Section.first.categories) %>
		</div>
	</div>
<% end -%>
