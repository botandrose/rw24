        \·
        %a#go_to_website{:href => "http://riverwest24.com"} Website »
    #page
      .main
        #main_menu
          %ul.left
            %li.item
              %a{:href => "/admin/sites/1/races/1/teams"} 2008
            %li.item
              %a{:href => "/admin/sites/1/races/2/teams"} 2009
            %li.item
