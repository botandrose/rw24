%table.list{:width => "100%"}
  %col{:width => "5%"}
  %col{:width => "5%"}
  %col{:width => "*"}
  %col{:width => "10%"}
  %col{:width => "30%"}
  %col{:width => "15%"}
  %thead
    %tr
      %th.right_align{ :scope => "col"} POS#
      %th.center_align{ :scope => "col"} Class
      %th{ :scope => "col" } Team Name
      %th.center_align{ :scope => "col" } Riders
      %th{ :scope => "col" } Leader Name
      %th.actions{ :scope => "col" }
  %tbody
    - @teams.each do |team|
      %tr
        %td.center_align= team.id
        %td.center_align=h team.category_abbrev
        %td= link_to h(team.name), edit_admin_team_path(@site, team)
        %td.center_align= team.riders.count
        %td=h team.captain.name
        %td.actions
          = link_to "Edit", edit_admin_team_path(@site, team), :class => "edit"
          = link_to "Delete", admin_team_path(@site, team), :class => 'delete', :confirm => t(:'adva.team.confirm_delete'), :method => :delete
