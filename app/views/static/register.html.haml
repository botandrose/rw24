- content_for :js do
  = javascript_include_tag 'jquery', 'register_form'

#viewpage
  %h2 Register to Ride
  
  %form{ :action => "https://www.paypal.com/cgi-bin/webscr" }
    %fieldset
      .field
        %p A fee of $20 per rider lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
        
        %label{ :for => "name" } team name
        %input{ :name => "name", :type => "text" }
        .clear

      .field
        %label{ :for => "email" } email
        %input{ :name => "email", :type => "text" }
        .clear

      .field
        %label{ :for => "phone" } phone
        %input{ :name => "phone", :type => "text" }
        .clear

      .field
        %label{ :for => "class" } rider class
        
        %input{ :name => "class", :value => "Solo", :data_div => "#solo_desc", :type => "radio", :checked => "checked" }
        %p Solo
        
        %input{ :name => "class", :value => "Tandem", :data_div => "#tandem_desc", :type => "radio" }
        %p Tandem
        
        %input{ :name => "class", :value => "Team A", :data_div => "#teamA_desc", :type => "radio" }
        %p Team A
        
        %input{ :name => "class", :value => "Team B", :data_div => "#teamB_desc", :type => "radio" }
        %p Team B
        
        .clear

      #number.field{ :style => "display: none" }
        %label{ :for => "number" } no. of riders
        
        - 1.upto(6) do |i|
          %input{ :name => "number", :value => i, :type => "radio", :checked => i == 3 ? "checked" : nil}
          %p= i
        
        .clear

      #solo_desc.field
        .dots_bottom

        %p Solo lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.

        .dots_bottom

        %label{ :for => "captain" } captain’s name
        %input{ :name => "captain", :type => "text" }
        .clear

      #tandem_desc.field{ :style => "display: none" }

        .dots_bottom

        %p Tandem lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
        
        .dots_bottom

        %label{ :for => "captainT" } captain’s name
        %input{ :name => "captainT", :type => "text" }
        .clear

        %label{ :for => "rider_twoT" } rider 2
        %input{ :name => "rider_twoT", :type => "text" }
        .clear

      #teamA_desc.field{ :style => "display: none" }

        .dots_bottom

        %p Team A lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
        
        .dots_bottom

        %label{ :for => "captainA" } captain’s name
        %input{ :name => "captainA", :type => "text" }
        .clear

        - 2.upto(6) do |i|
          %div{ :id => "teamA_rider_#{i}", :style => i > 3 ? "display: none" : nil}
            %label{ :for => "rider_#{i}A" }== rider #{i}
            %input{ :name => "rider_#{i}A", :type => "text" }
            .clear

      #teamB_desc.field{ :style => "display: none" }

        .dots_bottom

        %p Team B lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.

        .dots_bottom

        %label{ :for => "captainB" } captain’s name
        %input{ :name => "captainB", :type => "text" }
        .clear

        - 2.upto(6) do |i|
          %div{ :id => "teamB_rider_#{i}",  :style => i > 3 ? "display: none" : nil }
            %label{ :for => "rider_#{i}B" }== rider #{i}
            %input{ :name => "rider_#{i}B", :type => "text" }
            .clear

      .dots_bottom.black

      .field.center
        %strong
          Total : (<span id="qty">1</span>) riders = $<span id="total">20</span>.00

        %input{ :name => "cmd", :value => "_s-xclick", :type => "hidden" }
        %input{ :name => "hosted_button_id", :value => "4557638", :type => "hidden" }
        %input{ :name => "currency_code", :value => "USD", :type => "hidden" }
        %input#paypal.center{ :name => "submit", :src => "https://www.paypal.com/en_US/i/btn/btn_paynow_SM.gif", :border => "0", :type => "image", :alt => "PayPal - The safer, easier way to pay online!" }
        %img{ :src => "https://www.paypal.com/en_US/i/scr/pixel.gif", :border => "0", :height => "1", :alt => "", :width => "1" }
        .clear
