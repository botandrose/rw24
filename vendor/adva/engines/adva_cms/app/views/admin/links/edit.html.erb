<h2><%= t(:'adva.links.titles.edit') %></h2>

<%= links_to_content_translations(@link) %>

<% split_form_for :link, @link, :url => admin_link_path(@site, @section, @link), :html => {:multipart => true, :method => :put} do |f| -%>
  <%= f.hidden_field :updated_at, :value => @link.updated_at %>
  <%= render :partial => 'form', :locals => {:f => f} %>  

  <% f.buttons do %>
    <%= submit_tag t(:'adva.common.save'), :name => 'save_revision' %>
    <%= submit_tag t(:'adva.common.save_without_revision') %> <%= t(:'adva.common.connector.or') %> 
    <%= link_to t(:'adva.common.cancel'), admin_links_path %>
  <% end %>
<% end -%>
