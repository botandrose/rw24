= content_for :css do
  = stylesheet_link_tag "bonus_logger"

%h3 Bonus Logger - #{@checkpoint.name}

= form_tag do |form|
  = hidden_field_tag :_method, :put
  .bonus-fields
    - @race.teams.each do |team|
      .field
        = check_box_tag "team_ids[]", team.id, team.has_bonus?(@checkpoint), id: "team_#{team.id}"
        = label_tag "team_#{team.id}", team.position

  .field
    = submit_tag "Save"

