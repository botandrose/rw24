<h2><%= t(:'adva.articles.titles.edit') %></h2>

<%= split_form_for :article, @article, :url => admin_article_path(@site, @section, @article), :html => {:multipart => true, :method => :put} do |f| -%>
  <%= f.hidden_field :updated_at, :value => @article.updated_at %>
  <%= render :partial => 'form', :locals => {:f => f} %>  

  <p class="buttons">
    <%= submit_tag t(:'adva.common.save'), :name => 'save_revision' %>
    <%= link_to t(:'adva.common.cancel'), admin_articles_path %>
  </p>
<% end %>
