%h1== Laps for #{@team.name}

= link_to "+ Add lap", [:new, @team, :lap]

%table#laps{:width => "50%", :callspacing => "0", :cellpadding => "0"}
  %col{:width => "15%"}
  %col{:width => "*"}
  - if admin?
    %col{:width => "6%"}
    %col{:width => "6%"}
  %tr
    %th Lap
    %th Time
  - last_lap = nil
  - @laps.each_with_index do |lap, index|
    %tr{:class => cycle('','even')}
      %td.center_align= index+1
      %td.center_align= lap_time(last_lap, lap)
      - if admin?
        %td= link_to "", [:edit, @team, lap], :class => "edit"
        %td= link_to "", [@team, lap], :method => "delete", :class => "delete", :confirm => "Are you sure you want to delete this lap?"
    - last_lap = lap

%p= link_to "+ Add lap", [:new, @team, :lap]

%p= link_to "&laquo;&nbsp;Back to the Boards", "/teams"
