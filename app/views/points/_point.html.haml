%tr[point]{ :class => point.category.downcase }
  %td.center_align= fixed_number_or_empty point.team_position, :size => 3
  %td.center_align.sort= point.since_start
  %td.center_align= point.since_last
  %td.center_align
    - if point.category == "Bonus" and current_race.year >= 2012
      Bonus #{point.bonus_id}
    - else
      = point.category
  %td.center_align= point.qty
  %td.center_align= point.total_laps
  %td= link_to point.team_name, leader_board_laps_path(current_race.year, point.team_position), target: "_blank"
  %td
    = link_to "Edit", [:edit, point], title: "Edit Score", rel: "width:500 height:200", class: "edit ceebox"
    = link_to "Delete", point_path(point, :key => params[:key]), :class => "delete", :method => :delete, :confirm => "Are you sure?"
