            %li.item
              %a.current{:href => "/admin/sites/1/races/5/teams"} 2012
          %ul.actions
            %li.item
              %a{:href => "/admin/sites/1/races/5/teams.csv"} Export
            %li.item
              %a.current{:href => "#"} Settings
            %li.item
              %a{:href => "/admin/sites/1/races/5/teams/new"} New
            %li.item
              %a{:href => "/admin/sites/1/races/new"} New Race
        %p#flash_notice.flash.notice{:style => "display: none;"}
        %p#flash_error.flash.error{:style => "display: none;"}
        #content
          .col.half
          
            %h3 Basic Information
            %hr
            .field#race-title
              %label Title
              %input.text{:href => "text"}
          
            .field#starts
              %label Starts
              %select
                %option 27
              %select
                %option July
              %select
                %option 2012
              %em @
              %select
                %option 7PM
          
            .field#ends
              %label Ends
              %select
                %option 28
              %select
                %option July
              %select
                %option 2012
              %em @
              %select
                %option 7PM
            
            .field#description
              %label Description
              %textarea
          
          .col.half
            %h3 Bonus Checkpoints
            %hr
            %p.right_align= link_to "+ Add a Checkpoint", "#"
            %table#bonuses.list
              %thead
                %tr
                  %th #
                  %th Points
                  %th Name
                  %th
              %tbody
                %tr
                  %td 1
                  %td 2
                  %td Breakfast
                  %td
                    = link_to "Edit", "#", :class => "edit"
                    %input.delete{:type => "submit", :value => ""}
                %tr
                  %td 2
                  %td 2
                  %td Haircut
                  %td
                    = link_to "Edit", "#", :class => "edit"
                    %input.delete{:type => "submit", :value => ""}
                %tr
                  %td 3
                  %td 5
                  %td Tattoo
                  %td
                    = link_to "Edit", "#", :class => "edit"
                    %input.delete{:type => "submit", :value => ""}
          
          %hr.clear
          
          .field
            %input.save{:type => "submit", :value => "Save"}
            = link_to "cancel", :back, :class => "cancel"
            
