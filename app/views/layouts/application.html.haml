!!!
%html{html_attrs('en-US')}
  %head
    %meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
    %title
      riverwest24
      = yield :title
    %meta(name="keywords" content="")
    %meta(name="description" content="")

    = stylesheet_link_merged :base
    = yield :css
    /[if lte IE 7]
      = stylesheet_link_merged :ie
      
    %link(rel="shortcut icon" href="#{image_path("/favicon.png")}" type="image/png")

  %body
    #container
      #header
        .container
          %h1#logo
            %a{:href => "/"} Riverwest 24
          #title
            %h1
              Riverwest 24
            %h2 Hour Bike Race
            %span July 30-31 &bull; 2010 &bull; 7pm-7pm
          #countdown
            %p The race starts in:
            #days
              %b 000
              %span days
            #hrs
              %b 00
              %span hrs
            #min
              %b 00
              %span min
            #sec
              %b 00
              %span sec
          %ul#nav
            %li
              = link_to_current "Home", "/"
            %li#about
              = link_to_current "About", "/about"
              %ul
                %li= link_to_current "Overview", "/about/articles/overview"
                %li= link_to_current "History", "/about/articles/history"
                %li= link_to_current "Rules", "/about/articles/rules"
                %li= link_to_current "FAQ", "/about/articles/faq"
            %li#media
              = link_to_current "Media", "/media"
              %ul
                %li= link_to_current "Blog", "/media/articles/blog"
                %li= link_to_current "Press", "/media/articles/press"
                %li= link_to_current "Documentary", "/media/articles/documentary"
            %li#join
              = link_to_current "Join", "/join"
              %ul
                %li= link_to_current "Register", "/join/articles/register"
                %li= link_to_current "Volunteer", "/join/articles/volunteer"
                %li= link_to_current "Sponsor", "/join/articles/sponsor"
            %li#contact
              = link_to_current "Contact", "/contact", :id => "contact"
      #main
        .container
          - if flash[:notice]
            #flash_notice= flash[:notice]
          - if flash[:error]
            #flash_error= flash[:error]
          #content
            = yield
          #sidebar
            = yield :sidebar
      #footer
        .container
          %p
            = link_to "home", "/" 
            |
            = link_to "about", "/" 
            |
            = link_to "media", "/" 
            |
            = link_to "join", "/" 
            |
            = link_to "contact", "/" 
          %p
            Riverwest - Milwaukee, WI
          %p
            &copy; Copyright 2010 - All Rights Reserved 
          %p
            = mail_to "info@riverwest24.com"
          

    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"
    = javascript_include_merged :base
    = yield :js
