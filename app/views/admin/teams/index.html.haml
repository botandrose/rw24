%table.list{:width => "100%"}
  %col{:width => "5%"}
  %col{:width => "5%"}
  %col{:width => "5%"}
  %col{:width => "*"}
  %col{:width => "10%"}
  %col{:width => "30%"}
  %col{:width => "15%"}
  %thead
    %tr
      %th.center_align{ :scope => "col"} Paid
      %th.right_align{ :scope => "col"} POS#
      %th.center_align{ :scope => "col"} Class
      %th{ :scope => "col" } Team Name
      %th.center_align{ :scope => "col" } Riders
      %th{ :scope => "col" } Leader Name
      %th.actions{ :scope => "col" }
  %tbody
    - @teams.each do |team|
      %tr
        %td.center_align
          - if team.paid?
            .paid
          - if team.partially_paid?
            == #{team.riders.paid.count}/#{team.riders.count}
        %td.center_align= team.position
        %td.center_align=h team.category_abbrev
        %td= link_to h(team.name), [:edit, :admin, @site, @race, team]
        %td.center_align= team.riders.count
        %td= mail_to team.captain.email, h(team.captain.name), :cc => team.lieutenant_emails
        %td.actions
          = link_to "Edit", [:edit, :admin, @site, @race, team], :class => "edit"
          = link_to "Delete", [:admin, @site, @race, team], :class => 'delete', :confirm => 'Are you sure you want to delete this team and all its riders?', :method => :delete

- content_for :sidebar do
  .tabs
    .tab.active
      %h3 Totals
      %p
        Teams:
        %b= Team.count
        &nbsp;
        Racers:
        %b= Rider.count
      %p
        Shirts:
        - Rider.shirt_sizes.each do |size|
          = size
          %b= Rider.shirt(size).count
